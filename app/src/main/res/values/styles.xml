<resources>
    <style name="default_text">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/default_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="title_text">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="notification">
        <item name="android:background">@drawable/border3dp_light_gray</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
    <style name="notification_top_item">
        <item name="android:paddingBottom">20dp</item>
    </style>
    <style name="time_text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>
    <style name="replays_text">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="menu_button">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/small_menu</item>
    </style>

</resources>